<va-card class="vads-u-flex--fill vads-u-margin-bottom--2 vads-u-margin-right--0 medium-screen:vads-u-margin-x--0p5 spotlight-card">
	{% if entity.fieldSectionHeader != empty %}
		<h3 class="vads-u-margin-top--0">{{ entity.fieldSectionHeader }}</h3>
{% endif %}
{% if entity.fieldDescription %}
		<div id="featured-content-description{{ entity.fieldSectionHeader }}}}">
				{{ entity.fieldDescription.processed | drupalToVaPath | phoneLinks }}
		</div>
	{% endif %}
	{% if entity.fieldCta.entity.fieldButtonLink %}
		{% assign fieldButtonUri = entity.fieldCta.entity.fieldButtonLink.uri | hasCharacterOtherThanSpace %}
		{% assign fieldButtonUrl = entity.fieldCta.entity.fieldButtonLink.url.path | hasCharacterOtherThanSpace %}
		{% if fieldButtonUrl %}
				{% assign fieldUrl = entity.fieldCta.entity.fieldButtonLink.url.path %}
		{% elsif fieldButtonUri %}
				{% assign fieldUrl = entity.fieldCta.entity.fieldButtonLink.uri %}
		{% endif %}
		{% if fieldUrl %}
				<va-link active href="{{ fieldUrl }}" text="{{entity.fieldCta.entity.fieldButtonLabel}}"></va-link>
		{% endif %}
	{% endif %}
</va-card>

