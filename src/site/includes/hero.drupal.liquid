<!-- Hero Content -->
<div class="homepage-hero__wrapper">
  <div class="vads-l-grid-container vads-u-padding-x--0 homepage-hero">
    <div class="vads-l-row">
      <!-- start first column-->
      <div class="vads-l-col--12 medium-screen:vads-l-col--6">
        <div class="vads-u-padding-left--2 vads-u-padding-right--3 vads-u-padding-top--5
            vads-u-padding-bottom--3
            small-desktop-screen:vads-u-padding-bottom--8">
          <h1
            class="homepage-hero__welcome-headline vads-u-color--white vads-u-margin-top--0 vads-u-margin-bottom--2 vads-u-padding-y--1 vads-u-border-top--2px vads-u-border-bottom--2px vads-u-font-size--lg vads-u-font-family--serif">
            Welcome to VA.gov</h1>
          <h2
            class="vads-u-color--white vads-u-margin-top--3 vads-u-font-size--xl small-desktop-screen:vads-u-font-size--2xl">
            {% if fieldPromoHeadline %}
              {{ fieldPromoHeadline }}
            {% endif %}
          </h2>

          <p id="myva-login--hero" class="vads-u-color--white vads-u-padding-right--5">
            {% if fieldPromoText %}
              {{ fieldPromoText }}
            {% endif %}
          </p>

          {% if fieldPromoCta.entity.fieldButtonLabel and fieldPromoCta.entity.fieldButtonLink.url.path %}
            <a class="vads-c-action-link--white" href="{{ fieldPromoCta.entity.fieldButtonLink.url.path }}">
                {{fieldPromoCta.entity.fieldButtonLabel}}
            </a>
          {% endif %}
        </div>
      </div>
      <!-- end first column -->

      <!-- start second column for  bplogin card -->
      <script>
        function openLoginModal() {
          const params = (new URL(document.location)).searchParams;
          params.set("next", "loginModal")
          document.location = "?" + params.toString();
        }
      </script>
      <div class="vads-l-col--12 medium-screen:vads-l-col--6 homepage-hero__container">
        <div class="vads-u-display--flex vads-u-width--full vads-u-align-items--center vars-u-justify-content--center">
          <div
            class="vads-u-background-color--white vads-u-padding-x--3 vads-u-padding-y--2 vads-u-width--full homepage-hero__create-account ">
            <h2
              class="vads-u-font-size--lg vads-u-margin-top--0 vads-u-padding-right--2 vads-u-font-family--sans vads-u-font-weight--normal">
              Get access to the tools you need to manage your VA benefits and care
            </h2>
            <button class="vads-u-width--full" onclick="openLoginModal()">
              Create account
            </button>
          </div>
        </div>
      </div>
      <!-- end second column -->
    </div>
  </div>
</div>
<!-- /Hero -->
