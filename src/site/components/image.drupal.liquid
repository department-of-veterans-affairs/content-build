{% assign height = image.derivative.height %}
{% if height == empty%}
  {% assign height = "100%" %}
{% endif %}

{% assign width = image.derivative.width %}
{% if width == empty%}
  {% assign width = "100%" %}
{% endif %}

{% if image.derivative.url and image.alt %}
  <img class="{{ class }}"
       src="{{ image.derivative.url }}"
       alt="{{ image.alt }}"
       title="{{ image.title }}"
       width="{{ width }}"
       height="{{ height }}"
  />
{% endif %}