{% if image.derivative.url and image.alt != empty %}
  <img
      {% if class %}
        class="{{ class }}"
      {% endif %}
      {% if onclick %}
        onclick="{{ onclick }}"
      {% endif %}
      src="{{ image.derivative.url }}"
      alt="{{ image.alt }}"
      {% if width %}
        width={{ width }}
      {% elseif image.derivative.width %}
        width="{{ image.derivative.width }}"
      {% endif %}
      {% if height %}
        height={{ height }}
      {% elseif image.derivative.height %}
        height="{{ image.derivative.height }}"
      {% endif %}
      {% if crop %}
        style="object-fit: cover; object-position: top; {% if height %} height: {{ height }} {% endif %}"
      {% endif %}
  />
{% endif %}