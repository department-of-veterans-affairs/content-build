{% if image.derivative.url and image.alt %}
  <img
      {% if class %}
        class="{{ class }}"
      {% endif %}
      src="{{ image.derivative.url }}"
      alt="{{ image.alt }}"
      {% if image.derivative.width %}
        width="{{ image.derivative.width }}"
      {% endif %}
      {% if image.derivative.height %}
        height="{{ image.derivative.height }}"
      {% endif %}
  />
{% endif %}