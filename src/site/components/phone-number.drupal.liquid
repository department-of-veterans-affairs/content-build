{% if phoneNumber %}
  {% assign fax = false %}
  {% assign sms = false %}
  {% assign tty = false %}
  {% if phoneType == 'fax' %}
    {% assign fax = true %}
  {% elsif phoneType == 'sms' %}
    {% assign sms = true %}
  {% elsif phoneType == 'tty' %}
    {% assign tty = true %}
  {% endif %}
  <h{{ phoneHeaderLevel }}>{{ phoneLabel | default: 'Phone' }}</h{{ phoneHeaderLevel }}>
  {% if useParagraph %}
    <p>
  {% else %}
    <div>
  {% endif %}
    {% include "src/site/components/phone-number-base.drupal.liquid" %}
  {% if useParagraph %}
    </p>
  {% else %}
    </div>
  {% endif %}
{% endif %}
